        <ControlTemplate x:Key="HeaderTemplateWithHamburger">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Image Source="Dashboardbg" Grid.Row="0" Aspect="Fill" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></Image>
            <Grid VerticalOptions="Start" Grid.Row="0" RowSpacing="0" ColumnSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Padding="0" Margin="16" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Grid.Row="0" >
                    <ImageButton x:Name="Hamburger" Source="Hamburger" BackgroundColor="Transparent" HeightRequest="40" WidthRequest="40" HorizontalOptions="StartAndExpand"
                    Command="{TemplateBinding BindingContext.MenuCommand}" CommandParameter="1"/>
                    <Label Text="{TemplateBinding BindingContext.PageTitle}" VerticalTextAlignment="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center" Style="{StaticResource HeaderTextStyle}"></Label>
                </Grid>
                <StackLayout Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Spacing="0">
                    <ContentPresenter/>
                </StackLayout>
            </Grid>
                </Grid>
        </ControlTemplate>
